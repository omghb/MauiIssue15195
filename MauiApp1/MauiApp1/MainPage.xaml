<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <FlexLayout Wrap="Wrap" AlignItems="Start" AlignContent="Start">
            <VerticalStackLayout FlexLayout.Grow="1" Margin="10">
                <Grid RowDefinitions="47,3" BackgroundColor="Gray">
                    <Label Text="Some title" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <BoxView Grid.Row="1" Color="Blue"/>
                </Grid>

                <Grid BackgroundColor="Red" Margin="0,5">
                    <Button x:Name="CounterBtn" HeightRequest="50" Text="Test Button" BackgroundColor="Green"/>
                    <BoxView Color="Blue" HeightRequest="1" VerticalOptions="Start"/>
                </Grid>
            </VerticalStackLayout>
        </FlexLayout>
    </ScrollView>

</ContentPage>